<h1><%= @band.name %></h1>

<% if admin? %>
  <div style="float: left">
    <%= button_to "Edit", edit_band_path, method: :get %>
  </div>
  <div style="float: left">
    <%= button_to "Remove", @band, method: :delete %>
  </div>
  <div style="float: left">
    <%= button_to "Add another Band", new_band_path, method: :get %>
  </div>
<% end %>

<div style="float: left">
  <%= button_to "Back to Bands", bands_path, method: :get %>
</div>

<div style="clear: both">
</div>


<h3>Albums:</h3>
<% @band.albums.each do |album| %>
  <div class="album">
    <%= link_to album.name, album %>
  </div>
<% end %>

<% if admin? %>
  <br><br>
  <%= button_to "Add Album", new_band_album_path(@band), method: :get %>
<% end %>

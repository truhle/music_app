<h1>Sign In</h1>

<fieldset>
  <form action="/session" name="user" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <br>
    <label>
      Email:<br>
      <input type="email" name="email" size="30" maxlength="60">
    </label>
    <br><br>
    <label>
      Password:<br>
      <input type="password" name="password" size="25" maxlength="60">
    </label>
    <br><br>
    <input type="submit" value="Sign-in"> |
    <%= link_to "Need an account?", new_user_path %>
  </form>
</fieldset>
